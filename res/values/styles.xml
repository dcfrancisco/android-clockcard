<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WidgetBackground">
        <item name="android:background">@drawable/widget_frame_black</item>
    </style>

    <style name="styleWidgetOuter">
        <item name="android:paddingBottom">@dimen/widget_margin_vertical</item>
        <item name="android:paddingLeft">@dimen/widget_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/widget_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/widget_margin_vertical</item>
    </style>

    <style name="styleWidgetInner">
        <item name="android:background">@drawable/appwidget_dark_bg_clickable</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="styleAppwidgetValue" parent="android:Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">@dimen/app_widget_text_paddingLeft</item>
    </style>

    <style name="styleAppwidgetLabel" parent="android:Widget.TextView">
        <item name="android:textSize">7sp</item>
        <item name="android:paddingLeft">@dimen/app_widget_text_paddingLeft</item>
    </style>

    <style name="style_main_info_value" parent="android:Widget.Holo.TextView">
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">@+dimen/title_fontsize</item>
    </style>

    <style name="style_dayeditor_time" parent="android:Widget.Holo.TextView">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>