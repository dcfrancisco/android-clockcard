<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="3dp"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/ButtonIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:lines="1"
            android:text="@string/TimestampTypeIn"
            android:textColor="@color/timestampTypeIn"
            android:textSize="60dp"
            android:textStyle="bold"
            android:typeface="normal" >
        </Button>

        <Button
            android:id="@+id/ButtonOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/TimestampTypeOut"
            android:textColor="@color/timestampTypeOut"
            android:textSize="60dp"
            android:textStyle="bold"
            android:typeface="normal" >
        </Button>
    </LinearLayout>

    <TextView
        android:id="@+id/TextViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@+id/TextView02"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/title_fontsize" >
    </TextView>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="@string/TextViewWorkedShort"
                android:textSize="@dimen/title_fontsize" >
            </TextView>

            <TextView
                android:id="@+id/TextViewHoursWorked"
                style="@style/style_main_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/TextView03" >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/LabelLeavetAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="@string/label_leave_at"
                android:textSize="@dimen/title_fontsize" >
            </TextView>

            <TextView
                android:id="@+id/TextViewLeave"
                style="@style/style_main_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TextViewLeaveNotIn" >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="@string/LabelOvertime"
                android:textSize="@dimen/title_fontsize" >
            </TextView>

            <TextView
                android:id="@+id/TextViewOvertime"
                style="@style/style_main_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/TextView02" >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="@string/LabelHolidayLeft"
                android:textSize="@dimen/title_fontsize" >
            </TextView>

            <TextView
                android:id="@+id/TextViewHolidaysLeft"
                style="@style/style_main_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/TextViewHolidaysLeft" >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/LabelLastTS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="@string/appwidget_label_last_timestamp"
                    android:textSize="@dimen/title_fontsize" >
                </TextView>

                <Button
                    android:id="@+id/buDeleteLastTs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLastTimestamp"
                style="@style/style_main_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/TextViewHolidaysLeft" >
            </TextView>
        </TableRow>
    </TableLayout>

</LinearLayout>