<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="3dp" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/ButtonIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:ems="7"
            android:text="@+string/TimestampTypeIn"
            android:textColor="@color/timestampTypeIn"
            android:textStyle="bold"
            android:typeface="normal" >
        </Button>

        <Button
            android:id="@+id/ButtonOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="7"
            android:text="@+string/TimestampTypeOut"
            android:textColor="@color/timestampTypeOut"
            android:textStyle="bold"
            android:typeface="normal" >
        </Button>
    </LinearLayout>

    <TextView
        android:id="@+id/TextViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/TextView02"
        android:textSize="@+dimen/title_fontsize" >
    </TextView>

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5px"
            android:text="@+string/TextViewWorkedShort"
            android:textSize="@+dimen/title_fontsize" >
        </TextView>

        <TextView
            android:id="@+id/TextViewHoursWorked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/TextView03"
            android:textSize="@+dimen/title_fontsize" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/LabelLeavetAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5px"
            android:text="@+string/TextViewLeave"
            android:textSize="@+dimen/title_fontsize" >
        </TextView>

        <TextView
            android:id="@+id/TextViewLeave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+string/TextViewLeaveNotIn"
            android:textSize="@+dimen/title_fontsize" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5px"
            android:text="@+string/LabelOvertime"
            android:textSize="@+dimen/title_fontsize" >
        </TextView>

        <TextView
            android:id="@+id/TextViewOvertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/TextView02"
            android:textSize="@+dimen/title_fontsize" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5px"
            android:text="@+string/LabelHolidayLeft"
            android:textSize="@+dimen/title_fontsize" >
        </TextView>

        <TextView
            android:id="@+id/TextViewHolidaysLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/TextViewHolidaysLeft"
            android:textSize="@+dimen/title_fontsize" >
        </TextView>
    </LinearLayout>

</LinearLayout>